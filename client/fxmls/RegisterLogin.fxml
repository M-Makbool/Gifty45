<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="545.0" prefWidth="511.0" spacing="10" style="-fx-background-color: purple;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wishy.RegisterController">

    <Label prefHeight="25.0" prefWidth="182.0" style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: white;" text=" Registration" />

    <Label style="-fx-text-fill: white;" text="Email:" />
    <TextField fx:id="emailField" prefHeight="0.0" prefWidth="221.0" promptText="Enter your email" style="-fx-background-color: white; -fx-text-fill: black;" />

    <Label style="-fx-text-fill: white;" text="Username:" />
    <TextField fx:id="usernameField" prefHeight="31.0" prefWidth="215.0" promptText="Enter your username" style="-fx-background-color: white; -fx-text-fill: black;" />

    <Label style="-fx-text-fill: white;" text="Telephone:" />
    <TextField fx:id="telephoneField" promptText="Enter your phone number" style="-fx-background-color: white; -fx-text-fill: black;" />

    <Label style="-fx-text-fill: white;" text="Gender:" />
    <ChoiceBox fx:id="genderChoiceBox" />

    <Label style="-fx-text-fill: white;" text="Date of Birth:" />
    <DatePicker fx:id="dobPicker" />

    <Button onAction="#handleSubmit" style="-fx-background-color: white; -fx-text-fill: purple; -fx-font-weight: bold;" text="Submit" />

</VBox>
